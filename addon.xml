<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.sd4tvh"
       name="Schedules Direct for Tvheadend"
       version="0.3.4"
       provider-name="edit4ever">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.module.dateutil" version="2.4.2"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.requests" version="2.9.1" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Schedules Direct for Tvheadend (sd4tvh)</summary>
    <description>sd4tvh is a schedules direct xmltv grabber using the JSON API for use with the tvheadend backend. From the Kodi interface you can manage Schedules Direct lineups and select channels to include in the xmltv download.</description>
